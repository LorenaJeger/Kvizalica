<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pocetni_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/naslov_glavni"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/cherrybombregular"
        android:gravity="center_horizontal"
        android:text="@string/pocetni_screen"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/guideline_naslov_donji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_naslov_gornji" />

    <Button
        android:id="@+id/button_igraj"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/play_rounded_button"
        android:fontFamily="@font/coiny"
        android:text="@string/button_igraj"
        android:textColor="#FAFAFA"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/guideline_igraj_donji"
        app:layout_constraintEnd_toStartOf="@+id/guidelineOkomito_desni"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/guidelineOkomito_lijevi"
        app:layout_constraintTop_toBottomOf="@id/guideline_igraj_gornji" />

    <ImageView
        android:id="@+id/slika_pocetna"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_slika_donji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_slika_gornji"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pocetna" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_naslov_gornji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_naslov_donji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_igraj_gornji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_igraj_donji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_slika_donji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_slika_gornji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOkomito_lijevi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOkomito_desni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />


</androidx.constraintlayout.widget.ConstraintLayout>